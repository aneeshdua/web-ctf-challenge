            }
        }
        @media (max-width: 1000px) {
            .header-item{
                font-size: 14px;
                margin-right:6.5%;
            }

            .primary .contentImage{
                top:5px;
            }

            .primary .text{
                top:10%;
                font-size: 15px;
            }

            .secondary .text{
                top:10%;
                font-size: 12px;
            }

            .complain .contentImage{
                top:10px;
            }

            .complain .text{
                top:10%;
                font-size: 12px;
            }

            textarea{
                font-size: 8px;

            }
            .description{
                font-size: 20px;
            }
        }

        @media (max-width: 900px) {
            #content {
                width: 87%;
                margin-left: 7%;
                margin-right: 7%;
            }
            textarea{
                font-size: 7px;
            }
            .description{
                font-size: 16px;
            }
            .primary .text{
                top:10%;
                font-size: 14px;
            }

            .secondary .text{
                top:10%;
                font-size: 12px;
            }

            .complain .text{
                top:10%;
                font-size: 12px;
            }
        }

        @media (max-width: 815px) {
            .header-item{
                font-size: 12px;
                margin-right:3.5%;
            }
            .description{
                font-size: 17px;
            }
            #complaint{
