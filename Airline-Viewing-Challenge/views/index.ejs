            height:160px;
            top:30px;
        }

        .primary .text{
            width:65%;
            top:20%;
            padding-bottom: 5px;
            font-size: 20px;
        }

        .secondary .text{
            width:85%;
            top:20%;
            padding-bottom: 5px;
            font-size: 18px;
        }

        .complain .text{
            width:85%;
            top:20%;
            padding-bottom: 5px;
            font-size: 22px;
        }

        #complain{
            min-width: 440px;
        }

        .text{
            background: rgba(255, 255, 255, 0.7);
            border-radius:6px;
            padding-left: 15px;
            padding-right: 15px;
            position:absolute;
            font-weight: 400;
            left:0;
            right:0;
            margin: auto auto 5%;
            padding-bottom: 30px;
        }
        #oBook, #oPhone, #oComplain{
            position:absolute;
            bottom:20px;
            left:0;
            right:0;
            margin:auto;
            width:auto;
        }
        #oBook{
            width:300px;
        }
        #oPhone{
            width:180px;
        }
        #oComplain{
            width:180px;
        }

        #footer {
            position: absolute;
            bottom: 0;
            height: 30px;
            right: 0;
            left: 250px;
            color: darkgray;
            text-align: center;
            padding-bottom: 20px;
            z-index: 100;
        }

        #complaint{
            font-weight:200;
            font-size:17px;
        }

        #background{
            position:fixed;
            display: none;
            top:0;
            left:0;
            width:100%;
            height:100%;
            z-index: 2800;
            background: rgba(0, 0, 0, 0.8);
        }
        .widget{
            background:white;
            z-index:2900;
            padding: 50px 20px 20px;
            border-radius:6px;
            display: none;
            position:fixed;
            width:40%;
            height:80%;
            left:0;
            right:0;
            top:0;
            bottom:0;
            margin:auto;
            opacity:0;
            transition: opacity 0.3s ease-in;
            min-width: 440px;
            min-height: 412px;
        }
        .description {
            position: absolute;
            font-weight: 500;
            left: 8%;
            bottom: 20%;
            color: white;
            font-size: 60px;
            font-family: "Monotype Corsiva", serif;
        }
        .enabled{
            opacity: 1;
        }
        .widget form{
            width:90%;
            margin-left: 5%;
        }
        .widget form label{
            display:block;
        }
        form{
            margin-top:-1.5%;
        }
        .widget form input, select{
            font-weight:300;
            display:flex;
            flex-direction:row;
            margin-left:10px;
        }
        .sum{
            position:absolute;
            bottom:10.2%;
            right:10%;
            width:10%;
        }
        .finished{
            position:absolute;
            bottom:20px;
            right:20px;
            width:100px;
        }

        #googleMap{
            position:relative;
            width: 90%;
            margin-top: 5%;
            margin-left: 5%;
            margin-bottom:2.5%;
            height: 50%;
            transition: all 0s;
        }
        .blocks1{
            padding-left: 5%!important;
            padding-right: 5%!important;
            margin-left:0!important;
            margin-right: 0!important;
        }
        .blocks2{
            padding-left: 5%!important;
            padding-right: 5%!important;
            margin-left:0!important;
            margin-right: 0!important;
        }

