            }
            .widget{
                width: 50%;
            }
        }

        @media (max-width: 650px) {
            .header-phones{
                display: none;
            }
            .header-item{
                font-size: 15px;
                margin-right:4.5%;
                margin-top: 20px;
            }

            .left-panel {
                display: none;
            }
            .blocks1{
                padding-left: 10%!important;
            }
            .right-column{
                padding-left: 0;
                padding-right: 0;
            }
            #footer{
                left:0;

            }


            #content {
                margin-left: 0;
            }
            .description{
                font-size: 20px;
            }
            .widget{
                width: 60%;
            }

            .primary .text{
                top:10%;
                font-size: 13px;
            }

            .secondary .text{
                top:5%;
                font-size: 11px;
            }

            .complain .text{
                top:5%;
                font-size: 11px;
            }
        }

        @media (max-width: 600px) {
            .header-item{
                font-size: 12px;
                margin-right:2.5%;
            }

            .description{
                font-size: 18px;
            }
            .widget{
                width: 75%;
            }

            .primary .text{
                top:10%;
